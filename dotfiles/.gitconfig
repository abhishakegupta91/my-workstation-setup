[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = micro
    autocrlf = input
    pager = less -FRSX

[init]
    defaultBranch = main

[push]
    default = simple

[pull]
    rebase = false

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

[merge]
    tool = meld

[diff]
    tool = meld